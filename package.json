{
	"name": "@protokol/nestjs-template",
	"version": "0.0.1",
	"description": "Protokol Template for Nestjs Framework",
	"contributors": [
		"Žan Kovač <zan@protokol.com",
		"Amadej Pevec <amadej@protokol.com>",
		"Kristjan Košič <kristjan@protokol.com>"
	],
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\" \".\" \"!(.coverage)\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,__tests__}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config __tests__/e2e/jest-e2e.json",
		"prepare": "husky install"
	},
	"dependencies": {
		"@nestjs/common": "^8.0.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/platform-express": "^8.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/eslint": "^7.2.6",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.0.0",
		"@types/node": "^16.4.10",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.29.0",
		"@typescript-eslint/parser": "^4.29.0",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^24.1.5",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "27.2.3",
		"prettier": "^2.3.2",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5",
		"husky": "^7.0.0"
	}
}
